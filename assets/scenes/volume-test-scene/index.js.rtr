scene({
    background: [
        '#ffffff',
        '#aaaaaa'
    ],
    camera: camera({
        lookFrom: {x: -46.476, y: 47.535, z: 26.662},
        lookAt: {x: -43.435, y: 44.766, z: 24.787},
        vfov: 45,
        aperture: 0.001,
    }),
    geometries: [
        plane({
            material: 'floor-white',
            texture: 'check',
            scale: 60,
            position: {
                x: 0.3,
                y: -0.0,
                z: -0.4
            },
            rotation: {
                y: degToRad(45)
            }
        }),
        cube({
            material: 'wall-color',
            scale: 120,
            position: {
                x: 0.3,
                y: 20.0,
                z: -0.4
            },
            rotation: {
                y: degToRad(45)
            },
            flipNormals: true
        }),
        plane({
            material: 'ceil-light',
            scale: 30,
            position: {
                x: -0.3,
                y: 79.9,
                z: -1.6
            },
        }),
        range(3).map(i =>
            volume({
                material: `iso-volume-${i}`,
                minCoords: {
                    x: -10 + 15 * i,
                    y: 0,
                    z: -30 + 8 * i
                },
                maxCoords: {
                    x: 0 + 15 * i,
                    y: 15,
                    z: -20 + 8 * i
                },
            })
        ),
        range(3).map(i =>
            volume({
                material: `aniso-volume-${i}`,
                minCoords: {
                    x: -10 + 15 * i,
                    y: 0,
                    z: 20 - 8 * i
                },
                maxCoords: {
                    x: 0 + 15 * i,
                    y: 15,
                    z: 30 - 8 * i
                },
            })
        ),
    ],
    textures: [
        texture({
            name: 'check',
            src: `
                float s = sin(30.*uv.x)*sin(30.*uv.y);
                if(s < 0.) {
                    tColor = vec4(${normedColorStr('#aaaaaa')}, 1.0);
                } else {
                    tColor = vec4(0.05, 0.05, 0.05, 1.);
                }
            `
        }),
    ],
    materials: [
        range(3).map(i =>
            isotropicVolumeMaterial({
                name: `iso-volume-${i}`,
                color: [random(), random(), random()],
                albedo: [0.8, 0.8, 0.8],
                density: 0.1 + i * 0.3,
            }),
        ),
        range(3).map(i =>
            anisotropicVolumeMaterial({
                name: `aniso-volume-${i}`,
                color: [random(), random(), random()],
                albedo: [0.8, 0.8, 0.8],
                density: 0.3 + i * 0.3,
                scale: 1 + i * 3
            }),
        ),
        lambertMaterial({
            name: `floor-white`,
            color: '#ffffff',
            albedo: [0.8, 0.8, 0.8]
        }),
        lambertMaterial({
            name: `wall-color`,
            color: '#aaaaaa',
            albedo: [0.8, 0.8, 0.8]
        }),
        emissiveMaterial({
            name: `ceil-light`,
            color: '#ffffff',
            intensity: 30
        }),
    ]
});
